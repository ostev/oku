{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": true,

    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,

    /* JSX */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["preact/jsx-runtime"]
  }
}
